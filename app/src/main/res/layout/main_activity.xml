<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg"
        android:orientation="vertical">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="10" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="海康威视摄像头测试"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="1号摄像头"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/et_ip1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:hint="请输入IP"
                    android:text="192.168.1.67"
                    android:textColor="#DDFFDD"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_port1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="请输入端口"
                    android:inputType="number"
                    android:text="8000"
                    android:textColor="#DDFFDD"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_user1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="请输入账号"
                    android:text="yujing"
                    android:textColor="#DDFFDD"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_password1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="请输入密码"
                    android:text="abc123456"
                    android:textColor="#DDFFDD"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_channel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="0主码流1子码流"
                    android:inputType="number"
                    android:text="1"
                    android:textColor="#DDFFDD"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="2号摄像头"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/et_ip2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:hint="请输入IP"
                    android:text="192.168.1.66"
                    android:textColor="#DDFFDD"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_port2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="请输入端口"
                    android:inputType="number"
                    android:text="8000"
                    android:textColor="#DDFFDD"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_user2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="请输入账号"
                    android:text="admin"
                    android:textColor="#DDFFDD"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_password2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="请输入密码"
                    android:text="pw&amp;123456"
                    android:textColor="#DDFFDD"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_channel2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="0主码流1子码流"
                    android:inputType="number"
                    android:text="1"
                    android:textColor="#DDFFDD"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="3号摄像头"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/et_ip3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:hint="请输入IP"
                    android:text="192.168.1.68"
                    android:textColor="#DDFFDD"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_port3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="请输入端口"
                    android:inputType="number"
                    android:text="8000"
                    android:textColor="#DDFFDD"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_user3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="请输入账号"
                    android:text="admin"
                    android:textColor="#DDFFDD"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_password3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="请输入密码"
                    android:text="pw&amp;123456"
                    android:textColor="#DDFFDD"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_channel3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="0主码流1子码流"
                    android:inputType="number"
                    android:text="1"
                    android:textColor="#DDFFDD"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="4号摄像头"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/et_ip4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:hint="请输入IP"
                    android:text="192.168.1.69"
                    android:textColor="#DDFFDD"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_port4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="请输入端口"
                    android:inputType="number"
                    android:text="8000"
                    android:textColor="#DDFFDD"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_user4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="请输入账号"
                    android:text="admin"
                    android:textColor="#DDFFDD"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_password4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="请输入密码"
                    android:text="pw&amp;123456"
                    android:textColor="#DDFFDD"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_channel4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="0主码流1子码流"
                    android:inputType="number"
                    android:text="1"
                    android:textColor="#DDFFDD"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_play1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:text="播放（原作者版）"
                android:textColor="#004400"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bt_play2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:text="播放一路视频"
                android:textColor="#004400"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bt_play3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:text="播放两路视频"
                android:textColor="#004400"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bt_play4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:text="播放四路视频"
                android:textColor="#004400"
                android:textSize="18sp" />
        </LinearLayout>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="10" />
    </LinearLayout>
</layout>